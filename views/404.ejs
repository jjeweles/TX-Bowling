<% layout('./layouts/boilerplate') %>
<section id="banner">
    <div class="content">
        <header>
            <h2>-- 404 --</h2>
            <p>-- Page Not Found --</p>
        </header>
        <p><%= error %></p>
        <p>
            The page you were looking for wasn't found! Use the menu on the left
            hand side to navigate.
        </p>
        <ul class="actions">
            <li><a href="/" class="button big">Back To Home</a></li>
        </ul>
    </div>
    <span class="image object">
        <img src="images/error404.jpg" alt="404 Error" class="errorImage" />
    </span>
</section>
