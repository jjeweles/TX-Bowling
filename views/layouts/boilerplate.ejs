<!DOCTYPE html>
<html lang="en">
    <head>
        <title>TX Bowling</title>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, user-scalable=no"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="/assets/css/main.css" />
        <link rel="stylesheet" href="/assets/css/style.css" />
    </head>
    <body class="is-preload">
        <div id="wrapper">
            <div id="main">
                <div class="inner">
                    <header id="header">
                        <span>TX Bowling</span>
                        <ul class="icons">
                            <% if (!currentUser) { %>
                            <li><a href="/login">Login</a></li>
                            <% } else { %>
                            <li><a href="/logout">Logout</a></li>
                            <% } %>
                        </ul>
                    </header>
                    <%- include('../partials/flash') %> <%- body %>
                </div>
            </div>
            <div id="sidebar">
                <div class="inner">
                    <nav id="menu">
                        <header class="major">
                            <h2>Menu</h2>
                        </header>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>
                                <span class="opener">Upcoming Tournaments</span>
                                <ul>
                                    <li><a href="/austin">Austin</a></li>
                                    <li><a href="/dallas">Dallas</a></li>
                                    <li><a href="/houston">Houston</a></li>
                                    <li>
                                        <a href="/sanantonio">San Antonio</a>
                                    </li>
                                    <li><a href="/other">Other Areas</a></li>
                                </ul>
                            </li>
                            <li>
                                <span class="opener">TX Tournaments</span>
                                <ul>
                                    <li><a href="/calendar">Calendar</a></li>
                                    <% if(currentUser) { %>
                                    <li>
                                        <a href="/addtourney"
                                            >Add A Tournament</a
                                        >
                                    </li>
                                    <% } %>
                                    <li>
                                        <a href="/itaaverages">ITA Averages</a>
                                    </li>
                                </ul>
                            </li>
                            <li><a href="/chat">Chat</a></li>
                        </ul>
                    </nav>

                    <section>
                        <header class="major">
                            <h2>Get in touch</h2>
                        </header>

                        <ul class="contact">
                            <li class="icon solid fa-envelope">
                                <a href="#">admin@txbowling.com</a>
                            </li>
                        </ul>
                    </section>

                    <!-- Footer -->
                    <footer id="footer">
                        <p class="copyright">
                            &copy; <%= new Date().getFullYear(); %> Justin
                            Jewell.
                        </p>
                    </footer>
                </div>
            </div>
        </div>

        <!-- Scripts -->
        <script src="/assets/js/jquery.min.js"></script>
        <script src="/assets/js/browser.min.js"></script>
        <script src="/assets/js/breakpoints.min.js"></script>
        <script src="/assets/js/util.js"></script>
        <script src="/assets/js/main.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"
        ></script>
        <script src="/assets/js/app.js"></script>
    </body>
</html>
