<%- include('partials/header') -%>
<section id="banner">
    <div class="content">
        <header>
            <h2>-- Add A Tournament --</h2>
        </header>
        <div class="form-group tournamentForm">
            <label for="tournamentName">Tournament Name</label>
            <input type="text" class="form-control" id="tournamentName" placeholder="Tournament Name">
            <label for="tournamentDate">Tournament Date</label>
            <input type="date" class="form-control" id="tournamentDate" placeholder="Tournament Date">
            <label for="tournamentLocation">Tournament Location</label>
            <select class="form-control" id="tournamentLocation">
                <option selected disabled>Select a location</option>
                <option value="Austin">Austin</option>
                <option value="Dallas">Dallas</option>
                <option value="Houston">Houston</option>
                <option value="San Antonio">San Antonio</option>
                <option value="Other">Other</option>
            </select>
            <label for="tournamentFlyer">Tournament Flyer</label>
            <input type="file" class="form-control" id="tournamentFlyer" placeholder="Tournament Flyer">
            <label for="tournamentContactName">Tournament Contact Name</label>
            <input type="text" class="form-control" id="tournamentContactName" placeholder="Tournament Contact Name">
            <label for="tournamentContactEmail">Tournament Contact Email</label>
            <input type="email" class="form-control" id="tournamentContactEmail" placeholder="Tournament Contact Email">
            <label for="tournamentContactPhone">Tournament Contact Phone</label>
            <input type="tel" class="form-control" id="tournamentContactPhone" placeholder="Tournament Contact Phone"
                   onInput="this.value=phoneFormat(this.value)">
            <input type="submit">

        </div>
    </div>
</section>
<%- include('partials/footer') -%>
